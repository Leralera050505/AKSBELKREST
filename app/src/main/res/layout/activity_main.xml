<androidx.appcompat.widget.LinearLayoutCompat android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/purple_200"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height= "50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop= "50dp"
        android:text="Нажмите кнопку играть"
        android:textSize="20dp"

        android:id="@+id/tv_output"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="8dp"
                android:layout_width= "100dp"
                android:layout_height="100dp"
                android:background="@drawable/sp_basic_cell"
                android:textSize="60dp"

                android:id="@+id/btn_0_0"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="8dp"
                android:layout_width= "100dp"
                android:layout_height= "100dp"
                android:background="@drawable/sp_basic_cell"
                android:textSize="60dp"

                android:id="@+id/btn_0_1"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="8dp"
                android:layout_width= "100dp"
                android:layout_height= "100dp"
                android:background="@drawable/sp_basic_cell"
                android:textSize="60dp"

                android:id="@+id/btn_0_2"/>
        </TableRow>
        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="8dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/sp_basic_cell"
                android:textSize="60dp"

                android:id="@+id/btn_1_0"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="8dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/sp_basic_cell"
                android:textSize="60dp"

                android:id="@+id/btn_1_1"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="8dp"
                android:layout_width= "100dp"
                android:layout_height= "100dp"
                android:background="@drawable/sp_basic_cell"
                android:textSize="60dp"

                android:id="@+id/btn_1_2"/>
        </TableRow>
        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="8dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/sp_basic_cell"
                android:textSize="60dp"

                android:id="@+id/btn_2_0"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="8dp"
                android:layout_width= "100dp"
                android:layout_height= "100dp"
                android:background="@drawable/sp_basic_cell"
                android:textSize="60dp"

                android:id="@+id/btn_2_1"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="8dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/sp_basic_cell"
                android:textSize="60dp"

                android:id="@+id/btn_2_2"/>
        </TableRow>
    </TableLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width= "200dp"
        android:layout_height= "100dp"
        android:layout_marginTop= "100dp"
        android:layout_gravity="center"
        android:background="@drawable/sp_basic_cell"
        android:text="Играть!"
        android:id="@+id/btn_start"/>

</androidx.appcompat.widget.LinearLayoutCompat>